<form class="form-container"  action="/register_business" method="post">
        <h1>Register Business Information</h1>
        <div class="input-box">
            <input type="text" name='businessName' placeholder="Name" required>

        </div>

        <div class="input-box">
            <input type="text" name='businessAddress' placeholder="Address" required>

        </div>

        <div class="input-box">
            <input type="text" name='businessZIP' placeholder="ZIP" required>

        </div>

        <div class="input-box">
            <input type="text" name='businessCity' placeholder="City" required>

        </div>

        <div class="input-box">
            <input type="text" name='businessType' placeholder="Type" required>

        </div>
        
        <button type="submit" class="btn">Sign up</button>

        <div class="register-link">
            <p>Already have an account? <a href="/login">Login.</a></p>
        </div>

        {{#if message}}
            <div class="error-message">
                <p>{{message}}</p>
            </div>
        {{/if}}
        
</form>