<form class="form-container"  action="/register_citizen" method="post">
        <h1>Register Your Information</h1>
        <div class="input-box">
            <input type="text" name='citizenName' placeholder="Name" required>

        </div>

        <div class="input-box">
            <input type="text" name='citizenAddress' placeholder="Address" required>

        </div>

        <div class="input-box">
            <input type="text" name='citizenZIP' placeholder="ZIP" required>

        </div>

        <div class="input-box">
            <input type="text" name='citizenCity' placeholder="City" required>

        </div>


        
        
        <button type="submit" class="btn">Sign up</button>

        <div class="register-link">
            <p>Already have an account? <a href="/login">Login.</a></p>
        </div>
        
</form>