<div class="controls-container">

    {{#if userId}}
            
        {{#if_eq user.role 'business'}}
            <div class="button-container"></div>
                <button onclick="location.href='/home'" class="btn">&#8962; Home</button>
                <button onclick="location.href='/monitoring'" class="btn">Monitoring</button>
                <button onclick="location.href='/analytics'" class="btn">Analytics</button>
                <button onclick="location.href='/logout'" class="btn">&#8635; Exit</button>
            </div>
        {{/if_eq}}

        {{#if_eq user.role 'admin'}}
            <div class="button-container"></div>
                <button onclick="location.href='/home'" class="btn">&#8962; Home</button>
                <button onclick="location.href='/monitoring'" class="btn">Monitoring</button>
                <button onclick="location.href='/analytics'" class="btn">Analytics</button>
                <button id="suggestions_button" class="btn">Suggestions</button>
                <button id="heatmaps_button" class="btn">Heatmaps</button>
            <button onclick="location.href='/logout'" class="btn">&#8635; Exit</button>
            </div>
        {{/if_eq}}

        {{#if_eq user.role 'citizen'}}
            <div class="button-container">
                <button onclick="location.href='/home'" class="btn">&#8962; Home</button>
                <button id="suggestions_button" class="btn">Suggestions</button>
                <button id="heatmaps_button" class="btn">Heatmaps</button>
                <button onclick="location.href='/logout'" class="btn">&#8635; Exit</button>
            </div>
        {{/if_eq}}
        
    {{/if}}
    <div id="suggestionsForm" style="display:none;">
        <h2>Where do you want to go?</h2>
        <input id="place_input" type="text" name="query" placeholder="e.g. Πάρκο Ειρήνης">
        <select id="results_dropdown"></select>
        <button class="btn" id="search_place" type="submit">Search Places</button>
        <input type="radio" name="travel_mode" value="DRIVING" checked>Driving
        <input type="radio" name="travel_mode" value="WALKING">Walking
        <input type="radio" name="travel_mode" value="TRANSIT">Transit
        <button class="btn" id="get_directions" type="submit">Get Directions</button>
    </div>
    <div id="heatmapsForm" style="display:none;">
        {{!-- Make this collapsible --}}
        <button class="btn" id="change-gradient">Change gradient</button>
        <button class="btn" id="change-radius">Change radius</button>
        <button class="btn" id="change-opacity">Change opacity</button>
    </div>

    <div id="greeting-container">
        <h1 class="greeting-text">Welcome, {{user.username}}!</h1>
    </div>    
</div>
